<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="[%p][%d{HH:mm:ss.SSS}][%15.15t][%c{2}] %m%n" />
        </Console>
        <Console name="SQL_APPENDER" target="SYSTEM_OUT">
            <PatternLayout pattern="[%p][%d{HH:mm:ss.SSS}][%15.15t][%c{2}] %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.hibernate.SQL" level="info" additivity="false">
            <AppenderRef ref="SQL_APPENDER" />
        </Logger>
        <Logger name="org.postgresql" level="info" additivity="false">
            <AppenderRef ref="SQL_APPENDER" />
        </Logger>
        <Logger name="com.masociete.monprojet" level="debug" additivity="false">
            <AppenderRef ref="CONSOLE" />
        </Logger>

        <Root level="info">
            <AppenderRef ref="CONSOLE" />
        </Root>
    </Loggers>
</Configuration>